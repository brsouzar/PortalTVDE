@using Microsoft.AspNetCore.Components.Authorization
@using PortalTVDE.Client.Services.Interfaces
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavManager
@inject IClientAuthService AuthService
@implements IDisposable

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">PortalTVDE.Client</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        @if (isLoggedIn)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="clients">
                    <span class="bi bi-people-fill"></span> Clients
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="vehicles">
                    <span class="bi bi-car-front-fill"></span> Vehicles
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="quotes">
                    <span class="bi bi-file-text-fill"></span> Quotes
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="policies">
                    <span class="bi bi-shield-fill-check"></span> Policies
                </NavLink>
            </div>

            @if (isAdmin)
            {
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/mediators">
                        <span class="bi bi-person-badge-fill"></span> Mediators
                    </NavLink>
                </div>
            }

            <div class="nav-item px-3 mt-2">
                <button class="btn btn-sm btn-danger" @onclick="Logout">Logout</button>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-box-arrow-in-right"></span> Login
                </NavLink>
            </div>
        }
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool isLoggedIn = false;
    private bool isAdmin = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    protected override async Task OnInitializedAsync()
    {
        AuthStateProvider.AuthenticationStateChanged += OnAuthStateChanged;
        await UpdateMenuAsync();
    }

    private async Task UpdateMenuAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        isLoggedIn = user.Identity?.IsAuthenticated ?? false;
        isAdmin = user.IsInRole("admin");
        StateHasChanged();
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private async Task Logout()
    {
        await AuthService.Logout();
        isLoggedIn = false;
        isAdmin = false;
        NavManager.NavigateTo("/login", true);
    }

    private async void OnAuthStateChanged(Task<AuthenticationState> task)
    {
        await UpdateMenuAsync();
    }

    public void Dispose()
    {
        AuthStateProvider.AuthenticationStateChanged -= OnAuthStateChanged;
    }
}
